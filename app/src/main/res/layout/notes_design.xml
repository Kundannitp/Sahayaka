<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/gallery_cardView">

    <RelativeLayout
        android:id ="@+id/layout1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="0dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/cardView_commodityImageView"
            android:gravity="end"
            >


        </LinearLayout>


        <TextView
            android:id="@+id/cardView_notes_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            android:text="Commodity name "
            android:textColor="#000000"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/cardView_downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView_notes_title"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/cardView_commodityImageView"
            android:textColor="#8A8989"
            android:drawableLeft="@drawable/ic_cloud_download_black_24dp"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:paddingRight="25dp"
            android:text="Commodity type"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="12sp"
            />

        <View
            android:id="@+id/cardView_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cardView_downloads"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/cardView_view"
            android:id="@+id/blog_containing"
            >

            <TextView
                android:id="@+id/cardView_notes_dis"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Your blog"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="16sp"
                />
            <View
                android:id="@+id/cardView_view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/cardView_commodityImageView"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/card_conducted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Date"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="11dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/dancing"
                        ></TextView>

                    <TextView
                        android:id="@+id/card_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15-04-2020"
                        android:textSize="17sp"
                        android:fontFamily="@font/goodfont"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="11dp"
                        ></TextView>

                </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/card_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contributed by"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/dancing"
                    ></TextView>

                <TextView
                    android:id="@+id/card_uploader_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kundan Kumar Jha"
                    android:textSize="16sp"
                    android:fontFamily="@font/goodfont"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="10dp"
                    ></TextView>

            </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>