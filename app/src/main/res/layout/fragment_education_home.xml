<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:id="@+id/framelayout_container_education"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/education_bottom_nav" />



        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/education_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            app:itemBackground="@color/white"
            app:itemIconTint="@drawable/doctor_bottom_nav_color"
            app:itemTextColor="@drawable/doctor_bottom_nav_color"
            app:menu="@menu/education_bottom_navigation"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>